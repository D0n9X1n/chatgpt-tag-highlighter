{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar Tag Highlighter",
  "version": "0.0.1",
  "description": "Highlight ChatGPT sidebar chats by tags like [DX] with custom colors.",
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-tag-highlighter@D0n9X1n.dev",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}

